@import url('https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap');

body {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
    font-family: 'Inter'
}

.sale-strip {
    background: #000;
    color: #fff;
    display: flex;
    justify-content: center;
    padding: 15px 0px;
}

.shop-now {
    text-decoration: underline;
    font-weight: 600;
    cursor: pointer;
}

.main {
    padding: 15px 50px;
}

.navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.nav-link {
    margin-left: 50px;
    text-decoration: none;
    color: #000;
    font-weight: 400;
}

.logo {
    font-weight: 800;
    font-size: 24px;
}

.input {
    border: none;
    background: #F5F5F5;
    padding: 10px 15px;
}
.input:focus {
    outline: none;
}

.search-input-container {
    background: #F5F5F5;
    padding: 10px 15px;
    border-radius: 5px;
    height: 50px;
}

.items-container {
    display: flex;
    align-items: center;
}

.search-container {
    display: flex;
    margin-top: 15px;
}

.btn {
    background: #F5F5F5;
    border: none;
    outline: none;
    box-shadow: none;
}

.icon {
    margin-left: 15px;
    cursor: pointer;
    color: #000;
}